<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>ppom</artifactId>
        <groupId>io.github.portlek</groupId>
        <version>1.2</version>
    </parent>
    <artifactId>configs-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>configs-parent</name>
    <packaging>pom</packaging>
    <description>Annotation based configuration library for any Java project.</description>
    <url>https://github.com/portlek/configs</url>

    <modules>
        <module>configs-core</module>
        <module>configs-json</module>
        <module>configs-yaml</module>
        <module>configs-bukkit</module>
    </modules>

    <scm>
        <connection>scm:git:git://github.com/portlek/configs.git</connection>
        <developerConnection>scm:git:ssh://github.com/portlek/configs.git</developerConnection>
        <url>https://github.com/portlek/configs</url>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <configuration>
                    <minimizeJar>false</minimizeJar>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>io.github.portlek</groupId>
            <artifactId>reflection</artifactId>
            <version>3.1.2</version>
        </dependency>
        <dependency>
            <groupId>io.github.portlek</groupId>
            <artifactId>serializable</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>io.github.portlek</groupId>
            <artifactId>version</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>io.github.portlek</groupId>
            <artifactId>mapentry</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.github.Carleslc.Simple-YAML</groupId>
            <artifactId>Simple-Configuration</artifactId>
            <version>master-SNAPSHOT</version>
        </dependency>
    </dependencies>

</project>